datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Build {
  id    String    @id @default(uuid())
  name  String?
  posts Session[]
}

model Session {
  id           String   @id
  buildId      String?
  build        Build?   @relation(fields: [buildId], references: [id])
  title        String
  capabilities String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}
